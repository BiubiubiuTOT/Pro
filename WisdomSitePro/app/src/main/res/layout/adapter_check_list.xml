<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_common_background_white"
                android:orientation="vertical"
                android:paddingBottom="12dp"
                android:paddingLeft="8dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_toLeftOf="@+id/label_view"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/color_grey_333333"
        android:textSize="15sp"
        tools:text="金源达检查施工现场的问题指派"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/color_grey_999999"
        android:textSize="13sp"
        tools:text="兴义市住建局建筑工程队伍管理站-站长"/>

    <TextView
        android:id="@+id/tv_rectify_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="4dp"
        android:background="@drawable/shape_check_list_rectify_type"
        android:ellipsize="end"
        android:lines="1"
        android:paddingBottom="2dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="2dp"
        android:textColor="#4491FA"
        android:textSize="12sp"
        tools:text="局部停工整改"/>

    <TextView
        android:id="@+id/tv_danger_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/tv_rectify_type"
        android:background="@drawable/shape_check_list_rectify_type"
        android:ellipsize="end"
        android:lines="1"
        android:paddingBottom="2dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="2dp"
        android:textColor="#4491FA"
        android:textSize="12sp"
        tools:text="一般隐患"/>

    <TextView
        android:id="@+id/tv_submit_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_rectify_type"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/color_grey_666666"
        android:textSize="13sp"
        tools:text="提交时间：2018-09-05"/>

    <TextView
        android:id="@+id/tv_rectify_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_submit_time"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/color_grey_666666"
        android:textSize="13sp"
        tools:text="整改期限：2019-09-05"/>

    <com.ljkj.qxn.wisdomsitepro.Utils.widget.LabelView
        android:id="@+id/label_view"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentRight="true"
        app:label_background_color="#4491FA"
        app:label_fill_triangle="true"
        app:label_text="待整改"
        app:label_text_color="@color/color_white"
        app:label_text_size="13sp"/>

    <TextView
        android:id="@+id/tv_rectify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_submit_time"
        android:layout_marginRight="10dp"
        android:layout_marginTop="-12dp"
        android:background="@drawable/shape_check_rectify"
        android:paddingBottom="4dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="4dp"
        android:textColor="@color/color_white"
        android:textSize="14sp"
        tools:text="立即整改"/>

</RelativeLayout>