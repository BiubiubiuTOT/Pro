<?xml version="1.0" encoding="utf-8"?>
<com.ljkj.qxn.wisdomsitepro.Utils.widget.RoundRectLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/selector_common_background_white"
    android:orientation="vertical"
    app:all_radius="6dp">

    <RelativeLayout
        android:id="@+id/rl_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="黑匣子"/>

        <View
            android:id="@+id/line"
            style="@style/comDivider"
            android:layout_below="@+id/tv_title"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <com.ljkj.qxn.wisdomsitepro.Utils.widget.ItemView
            android:id="@+id/item_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            app:item_has_background="false"
            app:item_right_arrow="false"
            app:item_title="黑匣子编号"/>

        <com.ljkj.qxn.wisdomsitepro.Utils.widget.ItemView
            android:id="@+id/item_alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_code"
            app:item_has_background="false"
            app:item_right_arrow="false"
            app:item_title="报警状态"/>

        <com.ljkj.qxn.wisdomsitepro.Utils.widget.ItemView
            android:id="@+id/item_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_alarm"
            app:item_has_background="false"
            app:item_right_arrow="false"
            app:item_title="设备状态"/>

        <com.ljkj.qxn.wisdomsitepro.Utils.widget.ItemView
            android:id="@+id/item_access_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_status"
            app:item_has_background="false"
            app:item_right_arrow="false"
            app:item_title="接入时间"/>

        <com.ljkj.qxn.wisdomsitepro.Utils.widget.ItemView
            android:id="@+id/item_running"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_access_time"
            app:item_bottom_line="false"
            app:item_has_background="false"
            app:item_right_arrow="false"
            app:item_title="运行时长"/>

        <com.ljkj.qxn.wisdomsitepro.Utils.widget.LabelView
            android:id="@+id/lv_status"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_alignParentRight="true"
            app:label_background_color="#8DCA51"
            app:label_padding="5dp"
            app:label_text="正常"
            app:label_text_color="@color/color_white"
            app:label_text_size="15sp"/>

    </RelativeLayout>


</com.ljkj.qxn.wisdomsitepro.Utils.widget.RoundRectLinearLayout>