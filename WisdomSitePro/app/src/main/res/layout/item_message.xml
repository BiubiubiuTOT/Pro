<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dp"
              android:background="@drawable/selector_common_background_white"
              android:orientation="vertical"
              android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@color/color_green"
            android:gravity="center"
            android:text="安全"
            android:textColor="@color/color_white"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="安全监督检查站限期整改通知书"
            android:textColor="@color/color_grey_333333"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/ic_message_detail"
            android:text="详情"
            android:textColor="@color/color_grey_666666"
            android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp">

        <TextView
            android:id="@+id/tv_trouble_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="隐患类型："
            android:textColor="@color/color_grey_999999"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_rectify_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="整改类型："
            android:textColor="@color/color_grey_999999"
            android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/tv_check_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="检查日期："
            android:textColor="@color/color_grey_999999"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_send_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="下发时间："
            android:textColor="@color/color_grey_999999"
            android:textSize="12sp"/>

    </LinearLayout>

</LinearLayout>