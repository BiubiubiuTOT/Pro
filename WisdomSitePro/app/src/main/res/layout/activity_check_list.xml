<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_bg"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <include layout="@layout/layout_title_white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <RadioButton
                android:id="@+id/rb_trouble_level"
                style="@style/SelectRadioStyle"
                android:text="隐患等级"/>

        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="16dp"
            android:background="#999999"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:gravity="center">

            <RadioButton
                android:id="@+id/rb_rectify_type"
                style="@style/SelectRadioStyle"
                android:text="整改类型"/>

        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="16dp"
            android:background="#999999"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <RadioButton
                android:id="@+id/rb_check_data"
                style="@style/SelectRadioStyle"
                android:drawableRight="@mipmap/ic_select_down_grey"
                android:text="检查日期"
                android:textColor="@color/color_grey_333333"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/line"
        style="@style/comDivider"/>

    <include layout="@layout/layout_recycler_view_list"/>

</LinearLayout>
