<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_title_white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout style="@style/PersonalItemStyle">

                <TextView
                    style="@style/listSeTvStyle"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/tv_project_name"
                    android:text="项目名称：" />

                <TextView
                    android:id="@+id/tv_project_name"
                    style="@style/listFirstTvStyle"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="16sp" />

            </RelativeLayout>

            <View
                style="@style/comDivider"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <RelativeLayout style="@style/PersonalItemStyle">

                <TextView
                    style="@style/listSeTvStyle"
                    android:layout_centerVertical="true"
                    android:text="工程地址：" />

                <TextView
                    android:id="@+id/tv_project_address"
                    style="@style/listFirstTvStyle"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="13sp" />

            </RelativeLayout>

            <View
                style="@style/comDivider"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <RelativeLayout style="@style/PersonalItemStyle">

                <TextView
                    style="@style/listSeTvStyle"
                    android:layout_centerVertical="true"
                    android:text="工程分类：" />

                <TextView
                    android:id="@+id/tv_project_type"
                    style="@style/listFirstTvStyle"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="13sp" />

            </RelativeLayout>

            <View
                style="@style/comDivider"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <RelativeLayout style="@style/PersonalItemStyle">

                <TextView
                    style="@style/listSeTvStyle"
                    android:layout_centerVertical="true"
                    android:text="工程层数：" />

                <TextView
                    android:id="@+id/tv_project_count"
                    style="@style/listFirstTvStyle"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="13sp" />

            </RelativeLayout>

            <View
                style="@style/comDivider"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <RelativeLayout style="@style/PersonalItemStyle">

                <TextView
                    style="@style/listSeTvStyle"
                    android:layout_centerVertical="true"
                    android:text="报监日期：" />

                <TextView
                    android:id="@+id/tv_project_date"
                    style="@style/listFirstTvStyle"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textSize="13sp" />

            </RelativeLayout>

            <View
                style="@style/comDivider"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp">

                <TextView
                    style="@style/listSeTvStyle"
                    android:drawableLeft="@mipmap/ic_quality_supervise_sign_company"
                    android:drawablePadding="10dp"
                    android:text="建设单位：" />

                <TextView
                    android:id="@+id/tv_company"
                    style="@style/listFirstTvStyle"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp">

                <TextView
                    style="@style/listSeTvStyle"
                    android:drawableLeft="@mipmap/ic_quality_supervise_sign_address"
                    android:drawablePadding="10dp"
                    android:text="工程地址：" />

                <TextView
                    android:id="@+id/tv_address"
                    style="@style/listFirstTvStyle"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp">

                <TextView
                    style="@style/listSeTvStyle"
                    android:drawableLeft="@mipmap/ic_quality_supervise_sign_area"
                    android:drawablePadding="10dp"
                    android:text="建筑面积：" />

                <TextView
                    android:id="@+id/tv_area"
                    style="@style/listFirstTvStyle"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp">

                <TextView
                    style="@style/listSeTvStyle"
                    android:drawableLeft="@mipmap/ic_quality_supervise_sign_height"
                    android:drawablePadding="10dp"
                    android:text="建筑高度：" />

                <TextView
                    android:id="@+id/tv_height"
                    style="@style/listFirstTvStyle"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp">

                <TextView
                    style="@style/listSeTvStyle"
                    android:drawableLeft="@mipmap/ic_quality_supervise_sign_organ"
                    android:drawablePadding="10dp"
                    android:text="结构类型：" />

                <TextView
                    android:id="@+id/tv_organ"
                    style="@style/listFirstTvStyle"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp">

                <TextView
                    style="@style/listSeTvStyle"
                    android:drawableLeft="@mipmap/ic_quality_supervise_sign_base"
                    android:drawablePadding="10dp"
                    android:text="基础类型：" />

                <TextView
                    android:id="@+id/tv_base"
                    style="@style/listFirstTvStyle"
                    android:textSize="13sp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/tv_form"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_green"
        android:drawableRight="@mipmap/ic_more"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="质量监督注册登记申报表"
        android:textColor="@color/color_grey_333333"
        android:textSize="16sp"
        android:visibility="gone" />

</LinearLayout>