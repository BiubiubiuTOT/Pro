<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dp"
              android:background="@drawable/selector_common_background_white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                style="@style/listFirstTvStyle"
                android:maxLines="1"
                android:text="整改班组：钢筋班"/>

            <TextView
                android:id="@+id/tv_number"
                style="@style/listThirdTvStyle"
                android:text="巡检编号："/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_rectify"
            android:layout_width="67dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="48dp"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:textSize="12sp"/>

        <ImageView
            android:id="@+id/iv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <View
        style="@style/comDivider"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_reason"
            style="@style/listSeTvStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="事故原因："/>

        <TextView
            android:id="@+id/tv_lose"
            style="@style/listSeTvStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="伤亡及损失："/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tv_director"
            style="@style/listSeTvStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="班组负责人："/>

        <TextView
            android:id="@+id/tv_date"
            style="@style/listSeTvStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="检查日期："/>

    </LinearLayout>

</LinearLayout>
