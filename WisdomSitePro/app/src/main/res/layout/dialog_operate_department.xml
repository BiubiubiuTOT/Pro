<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/color_white"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:layout_width="300dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="@color/color_grey_333333"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_close_dialog"
        android:layout_marginTop="2dp"
        android:layout_alignParentRight="true"
        android:background="@mipmap/ic_close_dialog"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignParentEnd="true" />

    <com.ljkj.qxn.wisdomsitepro.Utils.widget.LineEditText
        android:id="@+id/et_department_name"
        android:layout_marginTop="36dp"
        android:background="@null"
        android:hint="请输入"
        android:textColorHint="@color/color_grey_999999"
        android:textColor="@color/color_grey_333333"
        android:textSize="14sp"
        android:layout_below="@id/iv_close_dialog"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/tv_quit_edit"
        android:padding="2dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/et_department_name"
        android:text="取消"
        android:textColor="@color/color_grey_999999"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_sure_edit"
        android:padding="2dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/et_department_name"
        android:text="确定"
        android:textColor="@color/color_grey_333333"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>