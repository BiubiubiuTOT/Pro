<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:background="@drawable/selector_common_background_white"
              android:orientation="vertical"
              android:paddingLeft="10dp"
              android:paddingRight="10dp">

    <RelativeLayout style="@style/listFirstItemStyle">

        <TextView
            android:id="@+id/img_avatar"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_circle_name"
            android:gravity="center"
            android:text="名"
            android:textColor="@color/color_white"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img_avatar"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_recorder_person"
                style="@style/listSeTvStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/construct_log_project_recorder"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_date"
                style="@style/listSeTvStyle"
                android:drawablePadding="6dp"
                android:text="2018-02-22"
                android:textSize="13sp"/>

        </LinearLayout>

    </RelativeLayout>

    <View style="@style/comDivider"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_project_head"
            style="@style/listSeTvStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:text="@string/construct_log_project_head"/>

        <TextView
            android:id="@+id/tv_code"
            style="@style/listSeTvStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:text="编号："/>

    </LinearLayout>


</LinearLayout>
