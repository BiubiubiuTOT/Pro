<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_bg"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <include
        layout="@layout/layout_title_white"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/bg_supervisor_manage_banner"/>

    <com.ljkj.qxn.wisdomsitepro.Utils.widget.ItemView
        android:id="@+id/item_side_station_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:item_icon="@mipmap/ic_side_station_record"
        app:item_title="旁站记录管理"/>

    <com.ljkj.qxn.wisdomsitepro.Utils.widget.ItemView
        android:id="@+id/item_inspector_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:item_icon="@mipmap/ic_inspector_record"
        app:item_title="巡视记录管理"/>

    <com.ljkj.qxn.wisdomsitepro.Utils.widget.ItemView
        android:id="@+id/item_supervisor_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:item_icon="@mipmap/ic_supervisor_record"
        app:item_title="监理记录管理"/>

    <com.ljkj.qxn.wisdomsitepro.Utils.widget.ItemView
        android:id="@+id/item_supervisor_standard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:item_bottom_line="false"
        app:item_icon="@mipmap/ic_supervisor_standard"
        app:item_title="监理标准规范"/>

</LinearLayout>