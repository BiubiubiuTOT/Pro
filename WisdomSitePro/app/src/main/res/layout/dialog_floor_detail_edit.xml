<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bg"
        android:padding="16dp"
        android:text="选择"
        android:textColor="@color/color_grey_666666"
        android:textSize="16sp"/>

    <View
        android:id="@+id/line1"
        style="@style/comDivider"
        android:layout_below="@+id/tv_title"/>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/color_bg"
        android:src="@mipmap/ic_floor_detail_dialog_close"/>

    <TextView
        android:id="@+id/tv_protection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:background="@drawable/selector_common_background_white"
        android:gravity="center"
        android:padding="16dp"
        android:text="编辑防护说明"
        android:textColor="@color/color_grey_333333"
        android:textSize="16sp"/>

    <View
        android:id="@+id/line2"
        style="@style/comDivider"
        android:layout_below="@+id/tv_protection"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>

    <TextView
        android:id="@+id/tv_floor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line2"
        android:background="@drawable/selector_common_background_white"
        android:gravity="center"
        android:padding="16dp"
        android:text="编辑楼层信息"
        android:textColor="@color/color_grey_333333"
        android:textSize="16sp"/>


</RelativeLayout>