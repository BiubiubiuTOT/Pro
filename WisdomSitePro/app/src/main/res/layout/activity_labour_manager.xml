<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/container"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_bg"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <include layout="@layout/layout_title_white"/>

    <TextView
        android:id="@+id/item_labor_statistics"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/ic_app_labor_statistics"
        android:gravity="center"
        android:text="人员统计"
        android:textColor="@color/color_white"
        android:textSize="19sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/item_labor_person"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/ic_app_labor_person"
        android:gravity="center"
        android:text="人员档案"
        android:textColor="@color/color_white"
        android:textSize="19sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/item_attendance_manager"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/ic_app_attendance_manager"
        android:gravity="center"
        android:text="考勤管理"
        android:textColor="@color/color_white"
        android:textSize="19sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/item_app_payroll"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/ic_app_payroll"
        android:gravity="center"
        android:text="工资发放"
        android:textColor="@color/color_white"
        android:textSize="19sp"
        android:textStyle="bold"/>

</LinearLayout>