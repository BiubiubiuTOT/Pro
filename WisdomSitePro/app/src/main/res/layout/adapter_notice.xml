<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="6dp"
              android:background="@drawable/selector_common_background_white"
              android:orientation="vertical"
              android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/color_grey_333333"
            android:textSize="14sp"
            tools:text="关于发布《产品研发流程管理制度》的通知"/>

        <TextView
            android:id="@+id/tv_red_dot"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/bg_message_circle_dot"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_attachment"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_frame_notice_attachemnt"
        android:drawableLeft="@mipmap/ic_message_attachment"
        android:drawablePadding="6dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:paddingLeft="4dp"
        android:textColor="@color/color_grey_666666"
        android:textSize="14sp"
        android:visibility="gone"
        tools:text="关于发布《产品研发流程管理制度》的通知"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_grey_999999"
            android:textSize="12sp"
            tools:text="2018.6.22 23:59"/>

        <TextView
            android:id="@+id/tv_publisher"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_grey_999999"
            android:textSize="12sp"
            tools:text="詹姆斯"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_read"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_grey_999999"
            android:textSize="12sp"
            tools:text="已读：20"/>

        <TextView
            android:id="@+id/tv_unread"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_main"
            android:textSize="12sp"
            tools:text="未读：20"/>

    </LinearLayout>


</LinearLayout>