<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dp"
              android:background="@drawable/selector_common_background_white"
              android:orientation="vertical"
              android:paddingLeft="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/iv_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_circle_name"
            android:gravity="center"
            android:text="名"
            android:textColor="@color/color_white"
            android:textSize="18sp"/>

        <LinearLayout
            android:id="@+id/ll_name_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="曹操"
                android:textColor="@color/color_grey_333333"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_group"
                style="@style/listContent"
                android:layout_marginLeft="10dp"
                android:text="班组：木工班"
                android:textSize="14sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="48dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_should_paid"
                style="@style/listContent"
                android:layout_marginLeft="10dp"
                android:text="应发工资：3600元"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_paided"
                style="@style/listContent"
                android:layout_marginLeft="10dp"
                android:text="实发工资：3600元"
                android:textSize="14sp"/>

        </LinearLayout>


        <ImageView
            android:id="@+id/iv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_already_clear"
            android:textColor="#f2931c"
            android:textSize="12sp"/>

    </RelativeLayout>

    <View
        style="@style/comDivider"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_date"
            style="@style/listContent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="发放月份：2018-09"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:drawablePadding="4dp"
            android:drawableRight="@mipmap/ic_blue_arrow_right"
            android:text="查看工资条"
            android:textColor="@color/color_main"/>

    </LinearLayout>


</LinearLayout>