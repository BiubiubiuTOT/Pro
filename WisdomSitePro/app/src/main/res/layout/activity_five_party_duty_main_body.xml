<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".ui.project.FivePartyDutyMainBodyActivity">

    <include layout="@layout/layout_title_white" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/title"
        android:background="@color/color_bg"
        android:overScrollMode="never"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/color_main"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/color_main"
        app:tabTextColor="@color/color_grey_333333" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab_layout" />
</LinearLayout>