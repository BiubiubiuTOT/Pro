<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            style="@style/listFirstTvStyle"
            android:text="样品名称：混凝土" />

        <TextView
            style="@style/listThirdTvStyle"
            android:layout_marginTop="6dp"
            android:text="申报日期：" />

        <View
            style="@style/comDivider"
            android:layout_marginTop="6dp" />

        <TextView
            style="@style/listSeTvStyle"
            android:layout_marginTop="6dp"
            android:text="建设单位：" />

        <TextView
            style="@style/listSeTvStyle"
            android:layout_marginTop="6dp"
            android:text="监理单位：" />

        <TextView
            style="@style/listSeTvStyle"
            android:layout_marginTop="6dp"
            android:text="施工单位：" />

        <TextView
            style="@style/listSeTvStyle"
            android:layout_marginTop="6dp"
            android:text="分包单位：" />

        <TextView
            style="@style/listSeTvStyle"
            android:layout_marginTop="6dp"
            android:text="工程造价：" />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="#f5f5f5">

        <TextView
            style="@style/listSeTvStyle"
            android:drawableLeft="@mipmap/ic_link_blue"
            android:drawablePadding="4dp"
            android:padding="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_weight="1"
            android:text="《文明安全评价表》下载"
            android:textColor="@color/color_grey_333333" />

        <TextView
            style="@style/listSeTvStyle"
            android:drawableRight="@mipmap/ic_more_blue"
            android:drawablePadding="4dp"
            android:padding="10dp"
            android:text="下载"
            android:textColor="@color/color_main" />

        <TextView
            style="@style/listSeTvStyle"
            android:drawableRight="@mipmap/ic_more_orange"
            android:drawablePadding="4dp"
            android:padding="10dp"
            android:text="预览"
            android:textColor="@color/color_orange" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />

</RelativeLayout>