<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/selector_common_background_white"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

    <TextView
        android:id="@+id/tv_equipment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="14sp"
        tools:text="吊塔在线：8"/>

    <TextView
        android:id="@+id/tv_equipment_exception"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="@color/color_red"
        android:textSize="14sp"
        tools:text="吊塔异常：4"/>

    <TextView
        android:id="@+id/tv_equipment_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawablePadding="4dp"
        android:drawableRight="@mipmap/ic_black_arrow_right"
        android:text="详情"
        android:textSize="14sp"/>

    <View
        style="@style/comDivider"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>