<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingBottom="15dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="15dp">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="删除部门"
        android:textColor="@color/color_grey_333333"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_close_dialog"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="2dp"
        android:background="@mipmap/ic_close_dialog" />

    <ImageView
        android:id="@+id/iv_delete_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_dialog_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@mipmap/ic_delete" />

    <TextView
        android:id="@+id/tv_delete_tips1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_delete_department"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="您确定删除该部门吗？"
        android:textColor="@color/color_orange"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/tv_delete_tips2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_delete_tips1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="删除后该部门内成员也会对应删除"
        android:textColor="@color/color_grey_999999"
        android:textSize="14sp" />

    <View
        android:id="@+id/divider_view"
        style="@style/comDivider"
        android:layout_below="@id/tv_delete_tips2"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tv_quit_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider_view"
        android:layout_marginTop="10dp"
        android:padding="2dp"
        android:text="取消"
        android:textColor="@color/color_grey_999999"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_sure_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/divider_view"
        android:layout_marginTop="10dp"
        android:padding="2dp"
        android:text="确定"
        android:textColor="@color/color_grey_333333"
        android:textSize="14sp" />
</RelativeLayout>