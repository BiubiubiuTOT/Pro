<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f5f5f5"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_attachment_name"
            style="@style/listSeTvStyle"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/ic_link_blue"
            android:drawablePadding="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/quality_accept_attachment"
            android:textColor="@color/color_main"/>

        <TextView
            android:id="@+id/tv_show_attachment"
            style="@style/listSeTvStyle"
            android:drawablePadding="4dp"
            android:drawableRight="@mipmap/ic_more_orange"
            android:padding="10dp"
            android:text="查看"
            android:textColor="@color/color_orange"/>
    </LinearLayout>

    <View
        style="@style/comDivider"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
</LinearLayout>