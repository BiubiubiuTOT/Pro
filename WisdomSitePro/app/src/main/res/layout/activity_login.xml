<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_white"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="@mipmap/ic_login_top"
        android:scaleType="fitXY"/>

    <Button
        android:id="@+id/btn_debug"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-10dp"
        android:layout_marginTop="-20dp"
        android:text="Debug"
        android:textAllCaps="false"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/et_name"
        style="@style/LoginEditTextStyle"
        android:layout_marginTop="32dp"
        android:drawableLeft="@mipmap/ic_login_input_phone"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:maxLength="11"
        android:text=""/>

    <EditText
        android:id="@+id/et_password"
        style="@style/LoginEditTextStyle"
        android:layout_marginTop="16dp"
        android:drawableLeft="@mipmap/ic_login_input_password"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:maxLength="20"
        android:text=""/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="60dp"
        android:text="默认密码为：123456"
        android:textColor="@color/color_main"
        android:textSize="13sp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/img_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@mipmap/ic_login_btn_bg"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:drawableLeft="@mipmap/ic_longma"
            android:drawablePadding="8dp"
            android:gravity="bottom"
            android:paddingBottom="20dp"
            android:text="贵州龙马融合信息技术有限责任公司"
            android:textColor="@android:color/black"
            android:textSize="13sp"/>

    </FrameLayout>

</LinearLayout>

