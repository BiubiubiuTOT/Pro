<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/scroll_View"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.ljkj.qxn.wisdomsitepro.Utils.widget.InputItemView
            android:id="@+id/item_safety_technical_measures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:inputItemMaxLength="10"
            app:inputItemTitle="安全技术措施情况"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/color_white"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="监理抽检数据情况"
            android:textColor="@color/color_grey_333333"
            android:textSize="13sp"/>

        <EditText
            android:id="@+id/et_sampling_data"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@color/color_white"
            android:gravity="left|top"
            android:hint="请输入(200字内)"
            android:maxLength="200"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/color_grey_333333"
            android:textColorHint="@color/color_grey_666666"
            android:textSize="13sp"/>

        <View style="@style/comDivider"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/color_white"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="施工过程简述"
            android:textColor="@color/color_grey_333333"
            android:textSize="13sp"/>

        <EditText
            android:id="@+id/et_construction_process"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@color/color_white"
            android:gravity="left|top"
            android:hint="请输入(200字内)"
            android:maxLength="200"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/color_grey_333333"
            android:textColorHint="@color/color_grey_666666"
            android:textSize="13sp"/>

        <View style="@style/comDivider"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/color_white"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="工程质量安全问题或隐患"
            android:textColor="@color/color_grey_333333"
            android:textSize="13sp"/>

        <EditText
            android:id="@+id/et_problem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="110dp"
            android:background="@color/color_white"
            android:gravity="left|top"
            android:hint="请输入(200字内)"
            android:maxLength="200"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/color_grey_333333"
            android:textColorHint="@color/color_grey_666666"
            android:textSize="13sp"/>

    </LinearLayout>

</ScrollView>

